<AnchorPane fx:id="dashboardPane" prefHeight="800.0" prefWidth="980.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LogInController">
   <ImageView fitHeight="801.0" fitWidth="980.0" layoutY="-1.0">
      <Image url="@../img/bg-img.jpg" />
   </ImageView>
   <AnchorPane fx:id="PaneContainer" layoutX="250.0" layoutY="138.0" prefHeight="537.0" prefWidth="480.0" style="-fx-background-color: white; -fx-border-radius: 20px;">
      <JFXButton layoutX="330.0" layoutY="432.0" onAction="#LogIn" prefHeight="49.0" prefWidth="94.0" style="-fx-background-color: #38af52;" text="Log In" textFill="WHITE">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </JFXButton>
      <JFXButton layoutX="50.0" layoutY="432.0" onAction="#SignIn" prefHeight="49.0" prefWidth="94.0" style="-fx-background-color: #e12e2e;" text="Sign In" textFill="WHITE">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </JFXButton>
      <JFXCheckBox fx:id="showPwdCheckBox" layoutX="316.0" layoutY="339.0" onAction="#showPwd" text="Show password" />
