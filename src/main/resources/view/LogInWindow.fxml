      <JFXTextField fx:id="txtUserName" layoutX="50.0" layoutY="189.0" maxHeight="25.0" maxWidth="400.0" prefHeight="25.0" prefWidth="379.0" promptText="Enter Username" />
      <Label ellipsisString="" layoutX="50.0" layoutY="243.0" prefHeight="17.0" prefWidth="74.0" text="Password* :" />
      <Label ellipsisString="" layoutX="50.0" layoutY="164.0" prefHeight="17.0" prefWidth="74.0" text="Username* :" />
      <ImageView layoutX="195.0" layoutY="50.0">
         <Image url="@../img/User-img.png" />
      </ImageView>
   </AnchorPane>
</AnchorPane>
